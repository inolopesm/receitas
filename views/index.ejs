<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Receitas</title>
</head>

<body>
  <h1>Receitas</h1>
  <ul>
    <li>
      <a href="/create">Nova receita</a>
    </li>
  </ul>
  <h2>Pesquisa</h2>
  <form method="GET">
    <p>
      <label for="search">Título*</label><br />
      <input type="text" id="search" name="search" value="<%= title %>" />
    </p>
    <button type="submit">Pesquisar</button>
  </form>
  <h2>Listagem</h2>
  <% if (recipes.length > 0) { %>
    <ul>
      <% for(const recipe of recipes) { %>
        <li>
          <a href="<%= recipe.id %>">
            <%= recipe.title %>
          </a>
        </li>
        <% } %>
    </ul>
  <% } else { %>
    <p>Não foi encontrada nenhuma receita para ser exibida</p>
  <% } %>
</body>

</html>
