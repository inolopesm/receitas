<%- include('partials/header') -%>
  <%#-- Main --%>
    <% if (recipes.length > 0) { %>
      <div class="row g-3">
        <% for (const recipe of recipes) { %>
          <div class="col-12 col-md-6">
            <article class="card shadow-sm">
              <img src="<%= recipe.photoUrl %>" alt="foto da receita pronta" />
              <div class="card-body">
                <h5 class="card-title">
                  <a class="link-orange" href="/<%= recipe.id %>">
                    <%= recipe.title %>
                  </a>
                </h5>
              </div>
            </article>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <article class="card shadow-sm">
        <div class="card-body">
          <p class="card-text text-center">
            NÃ£o foi encontrada nenhuma receita para ser exibida
          </p>
        </div>
      </article>
    <% } %>
  <%#/-- Main --%>
<%- include('partials/footer') -%>
